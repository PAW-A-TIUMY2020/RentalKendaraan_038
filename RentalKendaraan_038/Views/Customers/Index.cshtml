@model IEnumerable<RentalKendaraan_038.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h2>Tambah Data Peminjaman</h2>

<p>
    <a asp-action="Create">Tambah Data Baru</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamaCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alamat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoHp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGenderNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alamat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoHp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGenderNavigation.IdGender)
                </td>
                <td>
                    
                    <a asp-action="Edit" asp-route-id="@item.IdCustomer">
                        <svg width="1.5em" height="1em" viewBox="0 0 16 16" class="bi bi-pen-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
                        </svg>
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.IdCustomer">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCustomer">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function alertMessage(item) {
        if (confirm("Are you sure you want to delete this?")) {
            $().ready(function () {
                // $(".delete-button").click(null, DeleteItem); //DeleteItem is the callback
                window.location.href = '@Url.Action("Delete", "Employees")/' + item;
                return false;
            });
        }
    }
</script>

